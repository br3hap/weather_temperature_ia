<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- View weather.record View Tree -->
    <record id="view_weather_record_tree" model="ir.ui.view">
        <field name="name">view.weather.record.tree</field>
        <field name="model">weather.record</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
            </tree>
        </field>
    </record>

    <!-- View weather.record form -->
    <record id="view_weather_record_form" model="ir.ui.view">
        <field name="name">view.weather.record.form</field>
        <field name="model">weather.record</field>
        <field name="arch" type="xml">
            <form string="Weather Record">
                <sheet>
                    <div class="oe_title">
                        <label for="name"/>
                        <h1>
                            <field name="name" placeholder="Name..."/>
                        </h1>
                    </div>
                </sheet>
            </form>
        </field>
    </record>

    <!-- View weather.record search -->
    <record id="view_weather_record_search" model="ir.ui.view">
        <field name="name">view.weather.record.search</field>
        <field name="model">weather.record</field>
        <field name="arch" type="xml">
            <search>
                <group expand="1" string="Group By">
                    <filter string="Name" name="name" domain="[]" context="{'group_by':'name'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Action weather.record -->
    <record id="action_weather_record" model="ir.actions.act_window">
        <field name="name">Weather Record</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">weather.record</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[]</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                There is no examples click here to add new Weather Record.
            </p>
        </field>
    </record>

</odoo>
